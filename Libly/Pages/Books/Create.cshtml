@page

@model Libly.Pages.Books.CreateModel
@{
}

<h2 class="my-2">Create New Book</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BookVM.Title" class="form-label">Title</label>
                <input asp-for="BookVM.Title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BookVM.Dop" class="form-label">Date of Publication</label>
                <input asp-for="BookVM.Dop" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BookVM.CategoryId" class="form-label">Category</label>
                <select asp-for="BookVM.CategoryId" asp-items="Model.CategoryOptions" class="form-select">
                    <option value="">Select a category</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Create</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Back to List</a>
</div>
